@model NewsModel
<div class="post">
    <div class="inner-post">
        @Html.ValidationSummary()
        <h1 class="post-title">
            <span>@Model.Title</span>
        </h1>
        <div class="post-meta">
            <p>
                <span class="post-date">
                    Em: <span class="date">@Model.CreatedOn</span>
                </span>
                <span class="space">·</span>
                <span class="post-owner">
                    Por: <span class="owner">@Model.CreatedBy</span>
                </span>
            </p>
        </div>
        <div class="post-summary">
            @Html.Raw(Model.Body)
        </div>
    </div>
</div>
